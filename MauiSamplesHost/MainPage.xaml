<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:AnywhereControls.Maui.Controls;assembly=AnywhereControls.Maui"
    x:Class="MauiHost.MainPage"
    Title="Anywhere Controls">
    <VerticalStackLayout
        HorizontalOptions="Fill"
        Margin="20">
        <Label
            Text=".NET Anywhere Controls Examples"
            FontSize="24"/>
        <Grid
            x:Name="Examples"
            HorizontalOptions="Start"
            Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
