<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:microcharts="clr-namespace:Microcharts.Wpf"
        x:Class="WpfHost.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel x:Name="controlStack" Orientation="Vertical" HorizontalAlignment="Stretch">
        <Label Content="Hello there. These are .NET Standard UI controls."/>
        <microcharts:BarChart LabelColor="Blue" Width="200" Height="200"/>
    </StackPanel>
</Window>
