<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:s="http://schemas.microsoft.com/standard-ui/2022"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:microcharts="clr-namespace:Microcharts.Wpf"
        x:Class="WpfHost.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
        <Label Content=".NET Standard UI Controls"/>
        <microcharts:BarChart x:Name="MyBarChart" LabelColor="Blue" Width="300" Height="300"/>
        <microcharts:PointChart x:Name="MyPointChart" Width="300" Height="300"/>
    </StackPanel>
</Window>
